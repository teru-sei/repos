<%= render "shared/header" %>

<%= form_with model: @user, url: user_session_path, class:"session", local: true do |f| %>
  <h2>ログイン</h2>

  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <label class="form-text">Email</label>
      <div class="field">
        <%= f.email_field :email, class:"input-default", id:"email" %>
      </div>
    </div>
    <div class="form-group">
      <label class="form-text">パスワード</label>
      <div class="field">
        <%= f.password_field :password, class:"input-default", id:"password" %>
      </div>
    </div>
  <div class="actions">
    <%= f.submit "ログイン", class:"submit" %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
</div>
