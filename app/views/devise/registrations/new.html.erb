<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class:"registrarion", local: true do |f| %>
  <div class="registration">
    <h2>会員登録</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">※必須</span>
      <div class="field">
        <%= f.text_field :nickname, class:"input-default", id:"nickname" %>
      </div>
    </div>
    <div class="form-group">
      <label class="form-text">Email</label>
      <span class="indispensable">※必須</span>
      <div class="field">
        <%= f.email_field :email, class:"input-default", id:"email" %>
      </div>
    </div>
    <div class="form-group">
      <label class="form-text">パスワード</label>
      <span class="indispensable">※必須</span>
      <div class="field">
        <%= f.password_field :password, class:"input-default", id:"password" %>
      </div>
    </div>
    <div class="form-group">
      <label class="form-text">プロフィール</label>
      <span class="indispensable"></span>
      <div class="field">
        <%= f.text_field :profile, class:"text-default", id:"profile" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "会員登録", class:"submit" %>
    </div>
  <% end %>
   <%= render "devise/shared/links" %>
</div>