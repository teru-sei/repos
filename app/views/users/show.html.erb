<%= render "shared/header" %>

<div class="my-page">
  <h2>マイページ</h2>
  <div class="name-wrapper">
    <div class="name">
      <%= "名前" %>
    </div>
    <div class="user-profile">
      <%= @user.nickname %>
    </div>
  </div>
  <div class="name-wrapper">
    <div class="name">
      <%= "Email" %>
    </div>
    <div class="user-profile">
      <%= @user.email %>
    </div>
  </div>
  <div class="name-wrapper">
    <div class="name">
      <%= "プロフィール" %>
    </div>
    <div class="user-profile">
      <%= @user.profile %>
    </div>
  </div>
  <% if current_user.id == @user.id %>
    <div class="edit-btn">
      <%= link_to "編集する", "#", class:"user-edit" %>
    </div>
  <% end %>

  <% if @cafe.present? %>
  <div class="cafe-page">
    <h2>投稿したカフェ</h2>
    <div class="cafe-order">
    <% @cafe.each do |cafe| %>
      <div class="cafe-search">
        <%= link_to cafe_path(cafe) do %>
          <%= image_tag cafe.image, class:"search-image" %>
          <div class="search-name">
            『<%= cafe.name %>』
          </div>
          <div class="search-purpose">
          目的:  <%= cafe.purpose.name %>
          </div>
          <div class="search-region">
          地域:  <%= cafe.prefecture.name %>
          </div>
          <div class="search-address">
          住所:  <%= cafe.address %>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
  <% end %>
</div>